<% provide(:title, "申し込みフォーム") %>

<h1>申し込みフォーム</h1>

<div class="center">
  <h2>クレジットカード決済はこちら</h2>
    <%= form_with local: true, url: products_pay_path do |form| %>
      金額：<%= form.text_field :amount %>
      <script
        type="text/javascript"
        src="https://checkout.pay.jp"
        class="payjp-button"
        <data-key="<%= ENV["PAYJP_PUBLIC_KEY"] %>">
      </script>
    <% end %>
</div>



<div class="-row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
      
      <%= f.hidden_field :password_digest, value: "password" %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-form" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :size, class: "label-form" %><br>
      <%= f.select :size, ['100', '110', '120', '140', '150', 'WM', 'WL', 'WL',
                              'XS', 'S', 'M', 'L', 'XL', '2XL', '3XL'], { include_blank: true },
                              { class: "select-form" }%>
      <br>
      <%= f.label :memo, class: "label-form" %>
      <%= f.text_area :memo, class: "form-control", rows: 5 %>
      
      <%= f.submit "申し込み完了", class: "btn btn-danger btn-form btn-lg" %>
    <% end %>
  </div>
</div>