<% provide(:title, "詳細") %>

<h1>購入者詳細</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered table-hover table-responsive">
      <tr>
        <th class="center">名前</th>
        <td><%= @purchase.name %></td>
      </tr>
      <tr>
        <th class="center">メールアドレス</th>
        <td><%= @purchase.email %></td>
      </tr>
      <tr>
        <th class="center">郵便番号</th>
        <td><%= @purchase.number %></td>
      </tr>
      <tr>
        <th class="center">住所</th>
        <td><%= @purchase.address %></td>
      </tr>
        <th class="center">サイズ</th>
        <td><%= @purchase.size %></td>
      </tr>
      <tr>
        <th class="center">応援コメント</th>
        <td><%= @purchase.memo %></td>
      </tr>
    </table>
    
    <%= link_to "編集", edit_user_purchase_path(@user, @purchase), class: "btn btn-success btn-lg" %>
    <%= link_to "一覧へ", user_purchases_path(@user), class: "btn btn-default btn-lg" %>
  </div>
</div>